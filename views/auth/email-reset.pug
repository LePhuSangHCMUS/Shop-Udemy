include ../layouts/main-layout.pug
block head
    link(rel="stylesheet", href="./stylesheets/login.css")
block content
    main
        form.login-form(action="/email-reset-password" method='POST')
            .form-control
                if emailIsNotExist
                    .alert-danger Email isn't Exist
                label(for="email") E-Mail
                input(type="email", name="email")
            button.btn.btn-submit(type="submit" name="_csrf" value=csrfToken) Reset Password

    
      

          
                
             
            
