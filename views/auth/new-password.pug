include ../layouts/main-layout.pug
block head
    link(rel="stylesheet", href="../stylesheets/login.css")
block content
    main
        form.login-form(action="/new-password" method='POST')
            .form-control
                label(for="resetPassword") New Password
                input(type="password", name="resetPassword")
            .form-control
                label(for="resetNewPassword") Confirm New Password
                input(type="password", name="resetNewPassword")
                input(type="hidden", name="resetToken",value=resetToken)
                input(type="hidden", name="userId",value=userId)
            button.btn.btn-submit(type="submit" name="_csrf" value=csrfToken) Update Password

    
      

          
                
             
            
