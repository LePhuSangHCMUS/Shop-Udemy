include ../layouts/main-layout.pug
block head
    link(rel="stylesheet", href="/stylesheets/cart.css")
block content
    if productsCart.length<1
        h1 Cart is empty
    else
        ul.product-list
            each productCart in productsCart
                li.card-product-item 
                    p.title #{productCart.title}  (#{productCart.quantity}) 
                    form.form-action(action="/shop/cart/delete", method="post")
                        input(type="hidden" name='_csrf' value=csrfToken)
                        button.btn.btn-delete-cart(type='submit' value=productCart.productId name='productCartId') Delete
        form.form-action(action="/shop/orders", method="post")
             button.btn.btn-delete-cart(type='submit' name='_csrf' value=csrfToken) Order Now !
    
      

          
                
             
            
