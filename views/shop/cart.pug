include ../layouts/main-layout.pug
block head
    link(rel="stylesheet", href="/stylesheets/cart.css")
block content
    if productsCart.length<1
        h1 Cart is empty
    ul.product-list
         each product in productsCart
            li.card-product-item 
                p.title #{product.title}  (#{product.quantity}) 
                form.form-action(action="/shop/cart/delete", method="post")
                     button.btn.btn-delete-cart(type='submit' value=product.productId name='productId') Delete
      

          
                
             
            
