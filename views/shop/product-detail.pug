include ../layouts/main-layout.pug
block head
    link(rel="stylesheet", href="/stylesheets/product-detail.css")
block content
    main
        .grid
            article.card-product-item 
                header.card-header
                    h1.product__title #{product.title}
                .card-image
                    img(src=product.urlImage, alt=product.title, srcset="")  
                .card-content
                    h2.product__price $#{product.price}
                    p.product__description #{product.description}
                form.form-add-to-cart(action=("/shop/add-to-cart/"+ product.id), method="post")
                    button.btn.btn-add-to-cart(type='submit') Add to cart
  
                
                                  